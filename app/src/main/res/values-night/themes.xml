<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Tema Dark -->
    <style name="Theme.UASTUGAS" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/lavender</item>
        <item name="colorPrimaryVariant">@color/lavender</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Tema tanpa ActionBar -->
    <style name="Theme.UASTUGAS.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item> <!-- Menonaktifkan ActionBar default -->
        <item name="windowNoTitle">true</item> <!-- Menonaktifkan judul default -->
    </style>

    <!-- Tema untuk tampilan AppBar (untuk custom app bar) -->
    <style name="Theme.UASTUGAS.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Tema Popup untuk popups dalam aplikasi -->
    <style name="Theme.UASTUGAS.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
